generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id               String     @id @default(cuid())
  createdAt        DateTime   @default(now())
  fname            String
  lname            String
  age              Int
  gender           Gender
  religion         String?
  caste            String?
  occupation       String?
  educationLevel   String?
  height           Float?
  maritalStatus    MaritalStatus?
  children         Int?
  about            String?
  location         Location?
  email            String     @unique
  phone            String?
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  DIVORCED
  WIDOWED
}

model Location {
  city     String
  state    String
  country  String
}

